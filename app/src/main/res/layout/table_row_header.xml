        android:id="@+id/gridSamplingOutTime"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="SamplingOutTime"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:minWidth="95dp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/gridLoboratoryInTime"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="LoboratoryInTime"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:minWidth="95dp"
        android:padding="5sp"/>

    <TextView
        android:id="@+id/gridLoboratoryOutTime"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="LoboratoryOutTime"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:minWidth="95dp"
