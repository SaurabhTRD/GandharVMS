        android:id="@+id/gridProductionOutTime"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="ProductionOutTime"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:minWidth="95dp"
        android:padding="5sp"/>


</LinearLayout>