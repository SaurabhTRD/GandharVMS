<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Compartment Header -->
        <TextView
            android:id="@+id/txtCompartmentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compartment #1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <!-- Blender -->
        <TextView
            android:id="@+id/txtBlender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blender: X"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Production Sign -->
        <TextView
            android:id="@+id/txtProductionSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Production Sign: Y"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <!-- Operator Sign -->
        <TextView
            android:id="@+id/txtOperatorSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator: Z"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>

        <!-- Laboratory Fields -->
<!--        <EditText-->
<!--            android:id="@+id/etintime"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="In Time"-->
<!--            android:background="@drawable/custom_edittext"-->
<!--            android:inputType="numberDecimal"-->
<!--            android:padding="12dp"-->
<!--            android:textSize="16sp"-->
<!--            android:layout_marginTop="6dp"/>-->

        <EditText
            android:id="@+id/ettareweight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tare Weight"
            android:background="@drawable/custom_edittext"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:id="@+id/etremark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="remark"
            android:background="@drawable/custom_edittext"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>