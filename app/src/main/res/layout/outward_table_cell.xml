<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/textoutwardgridVehicleNumber"
        android:layout_width="100dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:textStyle="bold"
        android:gravity="center|start"
        android:textColor="@color/blue"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/textoutwardgridTransporter"
        android:layout_width="120dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:textStyle="bold"
        android:gravity="center|start"
        android:textColor="@color/blue"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/textoutwardgridStatus"
        android:layout_width="130dp"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/textoutwardgriddate"
        android:layout_width="130dp"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridSecInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridWeiInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridBilInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridIPFLabInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridIPFProInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridBLFLabInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridBLFProInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridDesInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="100dp"
        android:id="@+id/textoutwardgridLogInTime"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:layout_height="match_parent"/>

</LinearLayout>