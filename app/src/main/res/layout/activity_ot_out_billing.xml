<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutwardOutTankerBilling.ot_outBilling">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <include layout="@layout/header_layout"></include>
                <Button
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:onClick="outwardoutpendingbillingViewclick"
                    android:text="Pending Vehicles"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"></Button>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"

                    >
                    <EditText
                        android:id="@+id/etotoutbilserialnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Serial Number"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilvehicleno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vehicle Number"
                        android:inputType="textCapCharacters"
                        android:textSize="17dp"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout_productlistitoutbilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilTransporter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Transporter"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    >
                    <EditText
                        android:id="@+id/etotoutbilOANumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="OA/PO Number"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbildrivermonumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Driver Number"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilBatchno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Batch Number"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbildensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Density"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbiltareweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tare Weight"
                        android:inputType="number"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilnetweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Net Weight"
                        android:inputType="number"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilgrosswt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="GrossWeight"
                        android:inputType="number"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilsealnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seal Number"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"

                    >
                    <EditText
                        android:id="@+id/etpartyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Party Name"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@color/gray"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginRight="15dp"
                        >
                        <EditText
                            android:id="@+id/etotoutbiltotalQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Total-Quantity"
                            android:inputType="numberDecimal"
                            android:clickable="false"
                            android:enabled="false"
                            android:textSize="17dp"
                            android:textStyle="bold"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="5dp"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/etotoutbiltotalQuantityUOM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="UOM"
                            android:text="Litre"
                            android:inputType="none"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilinvoicenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Invoice Number"
                        android:inputType="textCapCharacters"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"

                    >
                    <EditText
                        android:id="@+id/etotoutbilintime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="In Time"
                        android:inputType="text"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/etotoutbilremakr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remark"
                        android:inputType="textCapCharacters"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="405dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/otoutbillcompleted"
                            android:text="COMPLETED"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:onClick="otoutbilcompletedclick">
                        </androidx.appcompat.widget.AppCompatButton>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/etotoutbilsubmit"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/OUM."
                            android:layout_marginLeft="10dp"
                            android:text="SUBMIT"
                            android:textSize="17dp"
                            android:textStyle="bold">

                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>