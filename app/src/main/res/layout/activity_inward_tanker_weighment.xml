<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inward_Tanker_Weighment.Inward_Tanker_Weighment">


    <Button
        android:id="@+id/dbview"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:onClick="Viewclick"
        android:text="View Weighment Data"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etintime"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="In Time"
                            android:inputType="text"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"

                        >

                        <EditText
                            android:id="@+id/etdate"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="Date"
                            android:inputType="text"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/regno"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"

                        >

                        <EditText
                            android:id="@+id/etserialnumber"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:hint="Serial Number"
                            android:inputType="text"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etvehicalno"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Vehicle Number"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wtwo"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etsuppliername"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Supplier"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"

                        >

                        <EditText
                            android:id="@+id/etmaterialname"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Material"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wthree"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"

                        >

                        <EditText
                            android:id="@+id/etdriverno"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Driver Mobile No"
                            android:inputType="number"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etoano"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="OA/PA Number"
                            android:inputType="number"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wfive"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etgrossweight"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Gross Weight"
                            android:inputType="number"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/ettareweight"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Tare Weight"
                            android:inputType="number"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wsix"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etnetweight"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Net Weight"
                            android:inputType="number"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/container"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Container No"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/shortagedip"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Shortage Dip"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"

                        >

                        <EditText
                            android:id="@+id/shortageweight"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Shortage Weight"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/w_eight"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etremark"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Remark"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">

                        <EditText
                            android:id="@+id/etsignby"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Sign By"
                            android:inputType="textCapCharacters"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:gravity="start"
                        android:paddingStart="18dp"
                        android:paddingEnd="8dp"
                        android:text="In Vehicle"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginLeft="120dp"
                        android:gravity="end"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="In Driver"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgtr"
                        android:layout_width="175dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="captureImageFromCamera1"
                            android:src="@drawable/camera"

                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="captureImageFromCamera2"
                            android:src="@drawable/camera" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/OUM."
                            android:layout_marginLeft="80dp"
                            android:text="Cancel"
                            android:textSize="22dp"
                            android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/wesubmit"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/OUM."
                            android:layout_marginRight="80dp"
                            android:text="SUBMIT"
                            android:textSize="22dp"
                            android:textStyle="bold">

                        </androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>