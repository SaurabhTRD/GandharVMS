<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:shrinkColumns="1">

        <TableRow>
            <TextView
                android:text="📦 Product Name:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvProductName"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="⏱ In Time:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvInTime"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="🌀 Blender:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvBlender"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="📝 Production Sign:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvProductionSign"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="👷 Operator Sign:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvOperatorSign"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="💬 Remark:"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
            <TextView
                android:id="@+id/tvRemark"
                android:background="@drawable/table_cell_border"
                android:padding="6dp"/>
        </TableRow>

    </TableLayout>
</ScrollView>